# 03 â€“ Fraud Feature Engineering
#
# Steps:
# - Load cleaned fraud data
# - Engineer new features (amount, time, risk)
# - Train-test split
# - Build preprocessing pipeline (scaling + encoding)
# - Save processed arrays and preprocessor for modeling

import os
import numpy as np
import pandas as pd
import joblib

from src.model_utils import (
    split_features_target,
    train_test_split_stratified,
    build_preprocessor,
)

# -------------------------------------------------------------------
# Paths
# -------------------------------------------------------------------
DATA_DIR = os.path.join("..", "data")
os.makedirs(DATA_DIR, exist_ok=True)

clean_fraud_path = os.path.join(DATA_DIR, "cleaned_fraud_dataset.csv")
fraud_clean = pd.read_csv(clean_fraud_path)

print("Cleaned fraud dataset shape:", fraud_clean.shape)
display(fraud_clean.head())

# -------------------------------------------------------------------
# Feature Engineering
# -------------------------------------------------------------------
df = fraud_clean.copy()

# Ensure transaction_datetime
if "transaction_datetime" in df.columns:
    df["transaction_datetime"] = pd.to_datetime(df["transaction_datetime"])
else:
    if "transaction_date" in df.columns and "transaction_time" in df.columns:
        df["transaction_datetime"] = pd.to_datetime(
            df["transaction_date"] + " " + df["transaction_time"]
        )
    elif "transaction_date" in df.columns:
        df["transaction_datetime"] = pd.to_datetime(df["transaction_date"])
    else:
        df["transaction_datetime"] = pd.date_range(
            start="2020-01-01", periods=len(df), freq="T"
        )

# Amount features
amount_col = "transaction_amount" if "transaction_amount" in df.columns else None
if amount_col:
    df["amount_log"] = np.log1p(df[amount_col])
else:
    print("No 'transaction_amount' column found; skipping amount_log feature.")

# Time-based features
df["hour"] = df["transaction_datetime"].dt.hour
df["day_of_week"] = df["transaction_datetime"].dt.dayofweek
df["is_night"] = df["hour"].between(0, 6).astype(int)
df["is_weekend"] = df["day_of_week"].isin([5, 6]).astype(int)

# High-risk country flag
if "country" in df.columns:
    high_risk_countries = ["NG", "PK", "RU", "UA", "BR"]  # illustrative
    df["high_risk_country"] = df["country"].isin(high_risk_countries).astype(int)

# Customer tenure (if available)
if "account_created_date" in df.columns:
    df["account_created_date"] = pd.to_datetime(df["account_created_date"])
    df["customer_tenure_days"] = (
        df["transaction_datetime"] - df["account_created_date"]
    ).dt.days.clip(lower=0)

print("\nDataset with engineered features shape:", df.shape)
display(df.head())

# -------------------------------------------------------------------
# Split into Features & Target
# -------------------------------------------------------------------
target_col = "is_fraud"
id_cols = ["transaction_id", "customer_id"]

X, y = split_features_target(
    df,
    target_col=target_col,
    drop_cols=id_cols,
)

X_train, X_test, y_train, y_test = train_test_split_stratified(
    X, y,
    test_size=0.2,
    random_state=42,
)

print("\nTrain/Test shapes:")
print("X_train:", X_train.shape, "X_test:", X_test.shape)
print("y_train:", y_train.shape, "y_test:", y_test.shape)

# -------------------------------------------------------------------
# Build Preprocessor & Transform
# -------------------------------------------------------------------
preprocessor = build_preprocessor(X_train)
preprocessor.fit(X_train)

X_train_processed = preprocessor.transform(X_train)
X_test_processed = preprocessor.transform(X_test)

print("\nProcessed shapes:")
print("X_train_processed:", X_train_processed.shape)
print("X_test_processed:", X_test_processed.shape)

# -------------------------------------------------------------------
# Save Processed Data & Preprocessor
# -------------------------------------------------------------------
processed_dir = os.path.join(DATA_DIR, "processed")
os.makedirs(processed_dir, exist_ok=True)

joblib.dump(preprocessor, os.path.join(processed_dir, "fraud_preprocessor.joblib"))
joblib.dump(X_train_processed, os.path.join(processed_dir, "X_train_processed.joblib"))
joblib.dump(X_test_processed, os.path.join(processed_dir, "X_test_processed.joblib"))
joblib.dump(y_train, os.path.join(processed_dir, "y_train.joblib"))
joblib.dump(y_test, os.path.join(processed_dir, "y_test.joblib"))

print("\nSaved processed data to:", processed_dir)

print("\n=== 03_feature_engineering completed ===")
